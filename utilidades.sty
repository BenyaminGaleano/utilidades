\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{utilidades}

\newcounter{qtion}

\newcommand{\Center}[1]{
	\begin{center}
		#1
	\end{center}
} %Centra el contenido que se le pasa

\newcommand{\Page}[3][c]{
	\begin{minipage}[#1]{#2\textwidth}
		#3
	\end{minipage}
} %crea divisiones en la hoja, sino se deja espacio entre comandos
% consecutivos de \Page estos apareceran a la par

\newcommand{\ballcolor}{blue}
\newcommand{\textballcolor}{black}

\renewcommand{\labelenumi}{$\bullet$} 

\newcommand{\Note}[1]{\small \noindent\textbf{Nota:} #1} %comando que inserta una nota al texto

%comandos personales
%este commando sirve para crear bolas con enumeraci√≥n
\newcommand*{\enumBall}[1]
{
	\footnotesize\protect\tikz[baseline=-3pt]
	\protect\node[scale=.7, circle, ball color =  \ballcolor]{\color{\textballcolor}\Large\bf #1};
}

\newenvironment{block}[1]{\hspace{-0.8 cm}\textbf{\Large #1}}{\vspace{3 mm}} %ambiente importante que define una parte del reporte.

\newenvironment{questions}[1][Cuestionario]{
	\begin{enumerate}[label=]
	\item
	\vspace*{.5cm}
	\noindent{\LARGE \textbf{#1}}
	\vspace*{-.3cm}
	\newcommand{\question}[1]{
		\stepcounter{qtion}
		\par
		\vspace*{.5cm}
		\hspace*{.5cm}
		\noindent\textbf{\arabic{qtion}. ##1\\}
		\hspace*{1cm}\noindent
	}
}{
	\end{enumerate}
	\setcounter{qtion}{0}
	\vspace*{.5cm}
}
