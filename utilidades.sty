\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{utilidades}

\newcommand{\Center}[1]{
	\begin{center}
		#1
	\end{center}
} %Centra el contenido que se le pasa

\newcommand{\Page}[3][c]{
	\begin{minipage}[#1]{#2\textwidth}
		#3
	\end{minipage}
} %crea divisiones en la hoja, sino se deja espacio entre comandos
% consecutivos de \Page estos apareceran a la par

\renewcommand{\labelenumi}{$\bullet$} 

\newenvironment{enumTab}{\begin{enumerate}[label=]\item \begin{enumerate}[label=$\bullet$]}{\end{enumerate}\end{enumerate}} %comando para realizar enumeraciones con cierto margen

\newenvironment{block}[1]{\hspace{-0.8 cm}\textbf{\Large #1}}{\vspace{3 mm}} %ambiente importante que define una parte del reporte.

\newenvironment{questions}[3][][.]{
	\newcounter{qtion}
	\newcommand{\@auxI}{#1}
	\newcommand{\@auxII}{#2}
	\newcommand{\@auxIII}{#3}
	\newcommand{\question}[1]{
		\stepcounter{qtion}
		\@auxII\@auxI{qtion}\@auxIII #1\\
	}
	\hspace{-0.8 cm}}
}{
\vspace{3 mm}
} % define una pregunta, recibe como primer parametro al número y siguiente es la pregunta

\newcommand{\Note}[1]{\small \textbf{Nota:} #1} %comando que inserta una nota al texto

%comandos personales
%este commando sirve para crear bolas con enumeración
\newcommand*{\enumBall}[1]
{
	\footnotesize\protect\tikz[baseline=-3pt]
	\protect\node[scale=.7, circle, ball color = white]{\color{black}\Large\bf #1};
}
